
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      // Check for a custom claim 'role' on the user's auth token.
      // This is more secure and efficient than reading another document.
      return request.auth != null && request.auth.token.role == 'admin';
    }

    match /users/{userId} {
      // An admin can read any user profile.
      // A user can only read their own profile.
      allow get: if isOwner(userId) || isAdmin();
      
      // Only admins can list all users.
      allow list: if isAdmin();

      // A user can create their own profile document.
      allow create: if isOwner(userId);
      
      // An admin can update any user profile.
      // A user can update their own profile, but cannot change their own role.
      allow update: if (isOwner(userId) && request.resource.data.role == resource.data.role) || isAdmin();
    }

    match /users/{userId}/pedidos/{orderId} {
      // Admins can read/write/delete any order.
      // Users can only read/write/delete their own orders.
      allow read, write, delete: if isOwner(userId) || isAdmin();
    }
    
    // This is the crucial rule for collection group queries.
    // It allows an admin to query across all 'pedidos' subcollections.
    match /{path=**}/pedidos/{orderId} {
      allow list: if isAdmin();
    }
  }
}
