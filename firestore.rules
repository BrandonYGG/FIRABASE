/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for user profiles
 * and allows public read access to material orders.
 *
 * Data Structure:
 * - /users/{userId}: Stores individual user profiles, accessible only to the user themselves.
 * - /orders/{orderId}: Stores material orders, publicly readable but writable by anyone.
 *
 * Key Security Decisions:
 * - User listing is disallowed to protect user privacy.
 * - Orders are publicly readable to facilitate easy access and management.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow (get) User 'czuuUyxraKV8qlUWexT8FtyDLGu2' can read their own profile document.
     * @allow (create) User 'czuuUyxraKV8qlUWexT8FtyDLGu2' can create their own profile document.
     * @allow (update) User 'czuuUyxraKV8qlUWexT8FtyDLGu2' can update their own profile document.
     * @allow (delete) User 'czuuUyxraKV8qlUWexT8FtyDLGu2' can delete their own profile document.
     * @deny (get) User 'anotherUser' cannot read User 'czuuUyxraKV8qlUWexT8FtyDLGu2' profile document.
     * @deny (create) User 'anotherUser' cannot create User 'czuuUyxraKV8qlUWexT8FtyDLGu2' profile document.
     * @deny (update) User 'anotherUser' cannot update User 'czuuUyxraKV8qlUWexT8FtyDLGu2' profile document.
     * @deny (delete) User 'anotherUser' cannot delete User 'czuuUyxraKV8qlUWexT8FtyDLGu2' profile document.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to material orders. Orders are public for reading.
     * @path /orders/{orderId}
     * @allow (get) Any user can read any order.
     * @allow (list) Any user can list all orders.
     * @deny (create) Any user can create any order.
     * @deny (update) Any user can update any order.
     * @deny (delete) Any user can delete any order.
     * @principle Allows public read access to orders, but restricts write access.
     */
    match /orders/{orderId} {
        allow get: if true;
        allow list: if true;
        allow create: if false;
        allow update: if false;
        allow delete: if false;
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
  }
}