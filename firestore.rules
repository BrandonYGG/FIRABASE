rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can read their own profile
      allow get: if isOwner(userId);

      // A user can create their own profile during sign-up
      allow create: if isOwner(userId);

      // A user can update their own profile
      // We check that they are not trying to change their role
      allow update: if isOwner(userId) && request.resource.data.role == resource.data.role;
    }

    // Rules for the 'pedidos' subcollection
    match /users/{userId}/pedidos/{orderId} {
      // A user can perform any operation (read, write, delete) on their own orders
      allow read, write, delete: if isOwner(userId);

      // Ensure that when creating a new order, the userId in the document
      // matches the authenticated user's ID. This prevents a user from creating
      // an order on behalf of another user.
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
    }
  }
}
