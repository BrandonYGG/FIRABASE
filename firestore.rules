rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Helper function to check if the user is an admin by checking custom claims
    function isAdmin() {
      // Check for the 'role' custom claim in the user's auth token.
      // This is more efficient than reading another document.
      return request.auth != null && request.auth.token.role == 'admin';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // An admin can read any user profile.
      // A user can only read their own profile.
      allow get: if isAdmin() || isOwner(userId);

      // A user can create their own profile during sign-up.
      allow create: if isOwner(userId);

      // An admin can update any user's profile.
      // A user can update their own profile, but cannot change their own role.
      allow update: if isAdmin() || (isOwner(userId) && request.resource.data.role == resource.data.role);

      // An admin can list all users.
      allow list: if isAdmin();
    }

    // Rules for the 'pedidos' subcollection within a user's path
    match /users/{userId}/pedidos/{orderId} {
      // An admin can read, write, or delete any order.
      // A user can only perform these actions on their own orders.
      allow read, write, delete: if isAdmin() || isOwner(userId);
    
      // Ensure that when a user creates a new order, the userId in the document
      // matches their authenticated ID. This prevents a user from creating
      // an order on behalf of another user.
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
    }

    // This is the crucial rule for collection group queries.
    // It allows an admin to query across all 'pedidos' subcollections.
    match /{path=**}/pedidos/{orderId} {
      allow list: if isAdmin();
    }
  }
}
